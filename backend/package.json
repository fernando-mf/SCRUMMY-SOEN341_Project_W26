{
  "name": "mealmajor-api",
  "version": "1.0.0",
  "description": "MealMajor API",
  "main": "dist/index.js",
  "scripts": {
    "predev": "npm run spec",
    "dev": "nodemon -r tsconfig-paths/register src/http/index.ts",
    "dev:docker": "docker compose -f integration/docker-compose.yml down && docker compose -f integration/docker-compose.yml up api --build --abort-on-container-exit --attach api",
    "prebuild": "npm run spec",
    "build": "tsc && tsc-alias",
    "start": "node dist/http/index.js",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "spec": "tsoa spec",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:docker": "scripts/run-tests.sh",
    "test:integration:docker:Windows": "scripts\\run-tests.bat"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.3",
    "postgres": "^3.4.8",
    "postgres-migrations": "^5.3.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^7.0.0-alpha.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/estree": "^1.0.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.0",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^@api/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "printWidth": 120
  }
}
