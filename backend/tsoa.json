{
  "entryFile": "src/http/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/http/controllers/*.docs.ts"],
  "spec": {
    "outputDirectory": "src/http/docs",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "outputDirectory": "src/http/docs"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/*"]
    }
  }
}
