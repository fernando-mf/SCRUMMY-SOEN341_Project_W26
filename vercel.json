{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd backend && npm ci && npm run build",
  "outputDirectory": "frontend",
  "cleanUrls": true,
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/[[...path]]" }],
  "functions": {
    "api/[[...path]].js": {
      "includeFiles": "backend/{dist,node_modules}/**"
    }
  }
}
